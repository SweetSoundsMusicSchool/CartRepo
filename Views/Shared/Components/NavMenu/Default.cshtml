@model IEnumerable<string>

<div class="d-grid gap-2">
    <a class="btn btn-outline-secondary" asp-action="Index"
    asp-controller="Home" asp-route-category="">Home</a>
    @foreach(var item in Model ?? Enumerable.Empty<string>())
    {
        <a class="btn @(item == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-secondary")"
        asp-action="Index"
        asp-controller="Home" 
        asp-route-category="@item"
        asp-route-currentPage="1">@item</a>
    }
</div>